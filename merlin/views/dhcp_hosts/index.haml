.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:dhcp_hosts, :index)
      %li=link_to pat(:new), url(:dhcp_hosts, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:dhcp_hosts)
    .inner
      %table.table
        %tr
          %th.first=mat(:dhcp_hosts, :id)
          %th=mat(:dhcp_hosts, :ip)
          %th=mat(:dhcp_hosts, :port)
          %th.last="&nbsp;"
        -@dhcp_hosts.each do |dhcp_hosts|
          %tr
            %td.first=dhcp_hosts.id
            %td=dhcp_hosts.ip
            %td=dhcp_hosts.port
            %td.last
              =button_to pat(:edit), url(:dhcp_hosts, :edit, :id => dhcp_hosts.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:dhcp_hosts, :destroy, :id => dhcp_hosts.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"